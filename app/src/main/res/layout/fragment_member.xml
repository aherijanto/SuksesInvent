<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_white"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        tools:context=".ui.membership.MemberFragment">

        <ImageView
            android:id="@+id/imgHelpdesk"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/helpdesk"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txtPhoneLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgHelpdesk"
            android:layout_alignTop="@id/imgHelpdesk"
            android:paddingLeft="10dp"
            android:text="@string/no_handphone_barcode_member"
            android:textStyle="bold"
            android:textColor="@color/soft_black" />

        <TextView
            android:id="@+id/txtCashierInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgHelpdesk"
            android:layout_below="@id/txtPhoneLabel"
            android:paddingLeft="10dp"
            android:text="@string/textcashiermember"
            android:textSize="12sp"
            android:textColor="@color/soft_black" />

        <ImageView
            android:id="@+id/barcodeimageview"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_below="@id/txtCashierInfo"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/QRimageview"
            android:layout_width="194dp"
            android:layout_height="181dp"
            android:layout_below="@id/barcodeimageview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/QRimageview"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txtWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, Bistique!"
                    android:textColor="@color/soft_black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="#EEEEEE" />

                <TextView
                    android:id="@+id/txtPointsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Points"
                    android:textColor="@color/soft_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtPointsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,250 pts"
                    android:textColor="@color/purple_500"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</ScrollView>